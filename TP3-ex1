class Rectangle:
    def __init__(self, longueur, largeur):
        self.longueur = longueur
        self.largeur = largeur

    def get_longueur(self):
        return self.longueur

    def set_longueur(self, longueur):
        self.longueur = longueur

    def get_largeur(self):
        return self.largeur

    def set_largeur(self, largeur):
        self.largeur = largeur

    def perimetre(self):
        return 2 * (self.longueur + self.largeur)

    def aire(self):
        return self.longueur * self.largeur

    def est_carre(self):
        return self.longueur == self.largeur

    def le_plus_grand(self, other):
        aire_self = self.aire()
        aire_other = other.aire()
        if aire_self > aire_other:
            return self
        elif aire_other > aire_self:
            return other
        else:
            return self

    def afficher(self):
        print(
            f"Longueur : {self.longueur} - Largeur : {self.largeur} - Périmètre : {self.perimetre()} - Aire : {self.aire()} - {'C\'est un carré' if self.est_carre() else 'Ce n\'est pas un carré'}")


def main():
    # Créer deux rectangles avec des dimensions différentes
    rectangle1 = Rectangle(5.0, 3.0)
    rectangle2 = Rectangle(4.0, 4.0)

    # Tester les différentes méthodes
    rectangle1.afficher()
    rectangle2.afficher()
    print(f"Le plus grand rectangle est : ")
    rectangle1.le_plus_grand(rectangle2).afficher()


if __name__ == "__main__":
    main()
